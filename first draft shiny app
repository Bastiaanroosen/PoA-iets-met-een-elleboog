# Define UI for slider demo app ----
ui <- fluidPage(
  
  # App title ----
  titlePanel("Traffic in the Port of Amsterdam - Binnenvaartschepen"),
  

  # Sidebar layout with input and output definitions ----
  sidebarLayout(
    
    # Sidebar to demonstrate various slider options ----
    sidebarPanel(
      
      # Input: Specification of range within an interval ----
      sliderInput("slider1", "Selecte date range",
                  min = as.Date("2018-01-01"),
                  max = as.Date("2018-10-31"),
                  value= c(as.Date("2018-01-01"), as.Date("2018-10-31")))
      
    ),
    
    # Main panel for displaying outputs ----
    mainPanel(
      
      # Output: Table summarizing the values entered ----
      plotOutput("slider1")
      
    )
  )
)

# Define server logic for slider examples ----
server <- function(input, output) {
  
  # Reactive expression to create data frame of all input values ----
  # sliderValues <- reactive({
  
  
  
  # })
  
  # Show the values in an HTML table ----
  output$slider1 <- renderPlot({
    
    xstart <- as.Date(input$slider1[1])
    xend <- as.Date(input$slider1[2])
    
    ggplot(graph) +
      geom_line(aes(x=graph$Date, y=graph$Number_of_Ships, group=graph$trafftype, color=trafftype))+
      xlim(xstart, xend)
  })
  
}

shinyApp(server = server, ui = ui)
